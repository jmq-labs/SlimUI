<?xml version="1.0" encoding="UTF-8"?>
<!-- SlimUI config file -->
<settings>
	<config>
		<site_identity>slimui</site_identity>
		<site_name>Slim-UI</site_name>					
		<wwwroot>http://slim-ui.com</wwwroot>				
				
		<!-- User accounts DB settings -->
		<odbc_dbname></odbc_dbname>	
		<dbserver></dbserver>
		<dbname></dbname>
		<dbuser></dbuser>
		<dbpass></dbpass>
		<db_users_table></db_users_table>
		
		<!-- Common field names from DB or AD when ldapAuth value is true -->
		<db_users_field_user>user_login</db_users_field_user>
		<db_users_field_pass>user_pass</db_users_field_pass>
		<db_users_field_display_name>display_name</db_users_field_display_name>
		<db_users_field_dept>department</db_users_field_dept>
		<db_users_field_title>title</db_users_field_title>
		<db_users_field_email>user_email</db_users_field_email>		
		
		<!-- LDAP Server settings -->
		<ldapauth>false</ldapauth>			
		<ldap_dn></ldap_dn>					
		<ldap_mail_dn></ldap_mail_dn>
		<ad_server_address></ad_server_address>
				
		<!-- Slim-UI settings -->
		<tokenstr>mySecretPhrase</tokenstr>
		<lang>EN</lang>
		<theme>default</theme>
		<sys_theme>default</sys_theme>
		<img_dir>content/img/</img_dir>		
		<favicon>favicon.ico</favicon>
		<iosicon>iosicon.png</iosicon>
		<start_menu_img>slimui-logo.png</start_menu_img>
		<login_top_image></login_top_image>
		<login_left_image>startup-img.jpg</login_left_image>
		<more_info_link>system/recovery.html</more_info_link>
		<allow_filters>false</allow_filters>
		<filter_by></filter_by>
		<filter_type>include</filter_type>
		<elogs>true</elogs>
		<mobile_enabled>true</mobile_enabled>
		<maintenance_mode></maintenance_mode>
		<dev_account>demo</dev_account>
		<ajax_cache>false</ajax_cache>
   	</config>
   	<appsmenu_filters>
   		<wb_logs></wb_logs>				
   	</appsmenu_filters>
   	<cookie>
   		<data>userid</data>
   		<data>user_displayname</data>		
   	</cookie>
</settings>